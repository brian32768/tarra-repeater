/var/log/asterisk/debug /var/log/asterisk/console /var/log/asterisk/full /var/log/asterisk/messages /var/log/asterisk/security /var/log/asterisk/*.log {
	weekly
	missingok
	rotate 5
	compress
	delaycompress
	notifempty
	create 640 root adm
	sharedscripts
	postrotate
		/usr/sbin/asterisk -rx 'logger reload' > /dev/null 2> /dev/null	
	endscript
} 
